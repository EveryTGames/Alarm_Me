<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:padding="16dp"
    android:theme="@style/Base.Theme.ALARMAPP">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.Theme.ALARMAPP">

        <!-- Instructions -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Please give permission for notification access so it can read command messages received in WhatsApp or Discord.\n\nPermissions needed:\n1. Show on Lock Screen\n2. Display pop-up from background\n3. Read notifications"
            android:textSize="16sp"
            android:theme="@style/Base.Theme.ALARMAPP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Two Buttons Side by Side -->
        <LinearLayout
            android:id="@+id/buttonRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:theme="@style/Base.Theme.ALARMAPP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetTop="12dp"
                android:insetBottom="12dp"
                app:cornerRadius="20dp"
                android:text="Give Permission"
                android:theme="@style/Base.Theme.ALARMAPP"
                app:elevation="2dp" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:theme="@style/Base.Theme.ALARMAPP" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/SetRingTone"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetTop="12dp"
                android:insetBottom="12dp"
                app:cornerRadius="20dp"
                android:text="Change RingTone"
                android:theme="@style/Base.Theme.ALARMAPP"
                app:elevation="2dp" />
        </LinearLayout>

        <!-- Support Me Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/supportMe"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:insetTop="12dp"
            android:insetBottom="12dp"
            app:cornerRadius="20dp"
            android:text="Support Me"
            android:theme="@style/Base.Theme.ALARMAPP"
            app:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonRow" />

        <!-- Max Volume Slider Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/volumeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:theme="@style/Base.Theme.ALARMAPP"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/supportMe">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:theme="@style/Base.Theme.ALARMAPP">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Alarm Volume"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:theme="@style/Base.Theme.ALARMAPP" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/maxVolumeSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:theme="@style/Base.Theme.ALARMAPP"
                    android:value="100"
                    android:valueFrom="0"
                    android:valueTo="100"
                    app:labelBehavior="floating" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Enable Ads -->
        <Switch
            android:id="@+id/enableAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Enable Ads (only when editing rules)"
            android:theme="@style/Base.Theme.ALARMAPP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/volumeCard" />

        <!-- Ads Note -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Ads only appear when editing or creating a rule. Everything else is ad-free."
            android:textAlignment="center"
            android:textSize="14sp"
            android:theme="@style/Base.Theme.ALARMAPP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enableAds" />

        <!-- Banner Ad -->
        <FrameLayout
            android:id="@+id/bannerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:theme="@style/Base.Theme.ALARMAPP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
