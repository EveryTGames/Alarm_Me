<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="textEnd"
    android:theme="@style/Base.Theme.ALARMAPP">

    <LinearLayout
        android:id="@+id/layoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:theme="@style/Base.Theme.ALARMAPP">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/myTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Theme.ALARMAPP"
            android:hint="Rule Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editRuleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.Theme.ALARMAPP"
                 android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sender's Names list (one of them matches)"
            android:theme="@style/Base.Theme.ALARMAPP" />

        <LinearLayout
            android:id="@+id/senderTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:gravity="start|fill|end"
            android:orientation="vertical"
            android:theme="@style/Base.Theme.ALARMAPP"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:gravity="start|fill|end"
            android:orientation="horizontal"
            android:theme="@style/Base.Theme.ALARMAPP"
            android:visibility="visible">

            <Button
                android:id="@+id/btnAddMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add More"
                android:theme="@style/Base.Theme.ALARMAPP" />

            <Button
                android:id="@+id/btnDeleteLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:text="Delete Last"
                android:theme="@style/Base.Theme.ALARMAPP" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="should one of the senders AND one of the commands match? or one of them is enough?"
            android:theme="@style/Base.Theme.ALARMAPP" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:gravity="start|fill|end"
            android:orientation="horizontal"
            android:theme="@style/Base.Theme.ALARMAPP"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="OR"
                android:textAllCaps="true"
                android:textDirection="rtl"
                android:textSize="30sp"
                android:theme="@style/Base.Theme.ALARMAPP" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/isAnd"
                style="@style/Widget.Material3.CompoundButton.MaterialSwitch"
                android:layout_width="69dp"
                android:layout_height="53dp"
                android:layout_marginEnd="24dp"
                android:background="#00118C69"
                android:buttonTint="#26FF00"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:theme="@style/Base.Theme.ALARMAPP"
                app:thumbTint="@color/black" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AND"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:theme="@style/Base.Theme.ALARMAPP" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="commands list (one of them matches)"
            android:theme="@style/Base.Theme.ALARMAPP" />

        <LinearLayout
            android:id="@+id/comandTexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:gravity="start|fill|end"
            android:orientation="vertical"
            android:theme="@style/Base.Theme.ALARMAPP"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:gravity="start|fill|end"
            android:orientation="horizontal"
            android:theme="@style/Base.Theme.ALARMAPP"
            android:visibility="visible">

            <Button
                android:id="@+id/btnAddMore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add More"
                android:theme="@style/Base.Theme.ALARMAPP" />

            <Button
                android:id="@+id/btnDeleteLast2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:text="Delete Last"
                android:theme="@style/Base.Theme.ALARMAPP" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="if you are a deep sleeper, u will be asked to enter a certain text so u be sure that u woke up, and didnt just close it while sleeping "
            android:theme="@style/Base.Theme.ALARMAPP" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="start|fill|end"
            android:orientation="horizontal"
            android:theme="@style/Base.Theme.ALARMAPP"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="NO"
                android:textAllCaps="true"
                android:textDirection="rtl"
                android:textSize="30sp"
                android:theme="@style/Base.Theme.ALARMAPP" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/isAnd0"
                style="@style/Widget.Material3.CompoundButton.MaterialSwitch"
                android:layout_width="69dp"
                android:layout_height="53dp"
                android:layout_marginEnd="24dp"
                android:background="#00118C69"
                android:buttonTint="#26FF00"
                android:checked="false"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:theme="@style/Base.Theme.ALARMAPP"
                app:thumbTint="@color/black" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="YES"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:theme="@style/Base.Theme.ALARMAPP" />

        </LinearLayout>

        <Button
            android:id="@+id/BtnPref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Apps to apply this rule on"
            android:theme="@style/Base.Theme.ALARMAPP"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.942"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Delete"
                android:padding="3dp"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="3dp"
                app:iconPadding="3dp"
                app:iconSize="1dp"
                android:textSize="14sp"
                android:theme="@style/Base.Theme.ALARMAPP"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.button.MaterialButton

                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="3dp"
                android:text="Cancel"
                android:textSize="14sp"
                android:theme="@style/Base.Theme.ALARMAPP"
                app:iconPadding="3dp"
                app:iconSize="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.button.MaterialButton

                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Save"
                android:padding="3dp"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="3dp"
                app:iconPadding="3dp"
                app:iconSize="1dp"
                android:textSize="14sp"
                android:theme="@style/Base.Theme.ALARMAPP"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>